pipeline {
    agent any

    stages {
        stage('Deploy') {
            agent{

                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
           
            steps {
                
                sh '''
                ls -la
            
                node --version
                echo 'Hello World'
                npm ci
                npm run build
                echo 'show'
                sleep 10
                npm install netlify-cli@20.1.1
                
                npm audit fix --force
                '''
            }
        }
    }
}